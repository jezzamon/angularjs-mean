.main
  .container
    h1 {{ show.title }}
      .row
        .col-md-6
          h3(ng-show="show.featured") Featured
          h3 Published on {{ show.published | date}}
        
        .col-md-6
          .card
            .card-header.card-header-info.text-center Tags
            .card-body
              span(style="margin-right: 5px", class="badge badge-pill badge-info", ng-repeat="tag in show.tags") {{tag}}

